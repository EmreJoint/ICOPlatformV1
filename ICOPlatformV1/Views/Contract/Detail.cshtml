<script>

	function ggg() {
		$.ajax({
			url: '@Url.Action("GetWLDetails", "Contract")',
			type: 'POST',
			datatype: 'html',
			data: { address: $('#EthAddress').val() },
			success: function (grid) {
				$('#WLDetails').html(grid);
				$("input[type='checkbox']").bootstrapToggle();
			}
		});
	}

	function GetDetails() {

		ggg();

	}
</script>

<div class="container" style="margin-top:10px">
	<div class="row">
		<div class="col-sm-4 ">
			<div class="panel panel-default">
				<div class="panel-heading">Genel Bilgiler</div>
				<div class="panel-body">
					<div class="form-group">
						<label for="totalEth">Total Eth</label>
						<input type="text" readonly class="form-control" id="totalEth" value=@ViewBag.totaleth>
					</div>
					<div class="form-group">
						<label for="totalCount">Total Count</label>
						<input type="text" readonly class="form-control" id="totalCount" value=@ViewBag.totalPayCount>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-4 ">
			<div class="panel panel-default">
				<div class="panel-heading">WhiteList Ekleme</div>
				<form asp-action="AddWL" asp-controller="Contract" method="POST" data-ajax="true" data-ajax-update="AddWL">
					<div class="panel-body" id="AddWL">
						@Html.Partial("AddWL")
					</div>
				</form>
			</div>
		</div>
		<div class="col-sm-4 ">
			<div class="panel panel-default">
				<div class="panel-heading">WhiteList Aktif/Pasif</div>
				<form asp-action="LockWL" asp-controller="Contract" method="POST" data-ajax="true" data-ajax-update="LockWL">
					<div class="panel-body" id="LockWL">
						@Html.Partial("LockWL")
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4 ">
			<div class="panel panel-default">
				<div class="panel-heading">Genel Bilgiler</div>
				<div class="panel-body" id="WLDetails">
					@Html.Partial("WLDetails")
				</div>
			</div>
		</div>
	</div>
</div>
